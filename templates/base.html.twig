<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
           <link rel="stylesheet" href="/assets/css/style.css">
           <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
        {% block stylesheet %}
        
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <header>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">blog</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link active" href="{{path('app_home')}}">Accueil
            <span class="visually-hidden">(current)</span>
          </a>
        </li>
        <li class="nav-item">
        {% if app.user %}
          <a class="nav-link active" href="{{path('app_ajouter_article')}}">Ajouter un blog
            <span class="visually-hidden">(current)</span>
          
        {% endif %}
          </a>
        </li>
      </ul>
          {% if app.user %}
          <a class="btn btn-success m-1" href="{{path('security_logout')}}">Deconnexion</a>
            
          {% else %}
          <a class="btn btn-success m-1" href="{{path('app_security')}}">Inscription</a>
          <a class="btn btn-success m-1" href="{{path('security_login')}}">Connexion</a>
          {% endif %}
    </div>
  </div>
</nav>
    </header>
    <div class="container-fluid">
   {% block body %}{% endblock %}
    </div>
    </body>
</html>
